<main class="container d-flex justify-content-center align-items-center vh-100">
  <div class="w-50">
    <h1 class="mb-4"><%= t('sessions.new.title') %></h1>

    <%= form_with url: sessions_path, local: true do |form| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading"><%= pluralize(@user.errors.count, t('errors.count')) %> <%= t('errors.prohibited') %></h4>
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.submit t('sessions.new.submit'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to t('sessions.new.forgot_password_link'), new_password_path, class: "text-decoration-none" %>
    </div>
  </div>
</main>
