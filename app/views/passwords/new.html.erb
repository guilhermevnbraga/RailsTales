<main class="container d-flex justify-content-center align-items-center vh-100">
  <div class="w-50">
    <h1 class="mb-4"><%= t('passwords.new.title') %></h1>

    <%= form_with(url: passwords_path, local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :email, t('passwords.new.email_label'), class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.submit t('passwords.new.submit'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</main>
